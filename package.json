{
  "name": "nogilib",
  "private": true,
  "description": "A Gatsby powered web application aiming at showing the information about Nogizaka46 in a user-friendly way",
  "version": "4.0.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "dev": "GATSBY_GRAPHQL_IDE=playground gatsby develop -p 8080",
    "serve": "gatsby serve",
    "analyze": "ANALYZE_BUNDLE_SIZE=true gatsby build",
    "type-check": "tsc",
    "type-check:server": "tsc -b tsconfig-server.json",
    "type-check-watch": "tsc --watch",
    "type-check-watch:server": "tsc -b tsconfig-server.json --watch",
    "generate-data": "NODE_PATH=./src ts-node --project tsconfig-server.json src/server/app.ts",
    "lint": "eslint --ignore-path .gitignore . --ext ts,tsx,js,jsx",
    "lint:fix": "eslint --ignore-path .gitignore . --ext ts,tsx,js,jsx --fix",
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook -s ./public/",
    "lighthouse": "lhci autorun"
  },
  "lint-staged": {
    "src/client/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/pages/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/server/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@emotion/core": "^10.1.1",
    "@emotion/react": "^11.1.2",
    "focus-visible": "^5.2.0",
    "framer-motion": "^2.9.5",
    "gatsby": "^2.28.2",
    "gatsby-image": "^2.8.0",
    "gatsby-plugin-emotion": "^5.0.0",
    "gatsby-plugin-layout": "^1.6.0",
    "gatsby-plugin-lunr": "^1.5.2",
    "gatsby-plugin-manifest": "^2.9.0",
    "gatsby-plugin-react-helmet": "^3.6.0",
    "gatsby-plugin-remove-serviceworker": "^1.0.0",
    "gatsby-plugin-resolve-src": "^2.1.0",
    "gatsby-plugin-sharp": "^2.11.0",
    "gatsby-plugin-typescript": "^2.8.0",
    "gatsby-plugin-web-font-loader": "^1.0.4",
    "gatsby-source-filesystem": "^2.7.0",
    "gatsby-transformer-json": "^2.8.0",
    "gatsby-transformer-sharp": "^2.9.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@lhci/cli": "^0.6.1",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-knobs": "^6.1.11",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.1.11",
    "@types/jest": "^26.0.19",
    "@types/query-string": "^6.3.0",
    "@types/react": "^16.14.0",
    "@types/react-dom": "^16.9.9",
    "@types/react-helmet": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-loader": "^8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gatsby-plugin-root-import": "^2.0.5",
    "gatsby-plugin-webpack-bundle-analyser-v2": "^1.1.18",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
