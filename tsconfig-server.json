{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "removeComments": true,
    "allowJs": true,
    "lib": ["es6", "dom", "esnext"],
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["src/client", "src/pages", "node_modules"]
}
